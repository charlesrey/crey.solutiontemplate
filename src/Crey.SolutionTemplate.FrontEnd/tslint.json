{
    "extends": "tslint:latest",
    "rules": {
        "max-line-length": [true, 140],
        "quotemark": [
            true,
            "double",
            "jsx-double"
        ],
        "no-submodule-imports": [
            true,
            "antd",
            "Common",
            "Components",
            "Environment",
            "rxjs"
        ],
        "one-line": [
            false,
            "check-catch",
            "check-finally",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "no-implicit-dependencies": false,
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-leading-underscore",
            "allow-pascal-case"
        ]
    }
}